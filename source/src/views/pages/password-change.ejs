<div class="p-4">
    <form method="post" action="/" class="p-4"
          style="width: fit-content; box-shadow: 0 0 10px rgba(0, 0, 0, .2);
          border-radius: 20px; border: 2px solid rgba(255, 255, 255, .2);">
        <div class="mb-3 row">
            <div class="col-auto">
                <label for="old-password" class="form-label">Mật khẩu củ: </label>
            </div>
            <div class="col-auto w-100">
                <input name="oldPassword" type="text" class="form-control" id="old-password">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-auto">
                <label for="new-password" class="form-label">Mật khẩu mới: </label>
            </div>
            <div class="col-auto w-100">
                <input name="newPassword" type="text" class="form-control" id="new-password">
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-auto">
                <label for="re-new-password" class="form-label">Nhập lại mật khẩu: </label>
            </div>
            <div class="col-auto w-100">
                <input name="reNewPassword" type="text" class="form-control" id="re-new-password">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">XÁC NHẬN</button>
    </form>
</div>